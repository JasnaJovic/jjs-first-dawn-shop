  "name": "Featured Slider",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "blocks": [
  {
    "type": "image",
    "name": "Image w/ text & button",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "t:sections.collage.blocks.image.settings.image.label"
      },
      {
        "type": "text",
        "id": "button__label1",
        "default": "Button label",
        "label": "Choose Button #1 label"
      },
      {
        "type": "url",
        "id": "button_url_1",
        "label": "Where does it lead you?"
      },
      {
        "type": "text",
        "id": "button__label2",
        "default": "Button label",
        "label": "Choose Button #2 label"
      },
      {
        "type": "url",
        "id": "button_url_2",
        "label": "Where does it lead you?"
      }
      
    ]
  },
  {
    "type": "featured-product",
    "name": "t:sections.collage.blocks.product.name",
    "settings": [
      {
        "type": "product",
        "id": "product",
        "label": "t:sections.collage.blocks.product.settings.product.label"
      },
      {
        "type": "checkbox",
        "id": "use_product_image",
        "default": true,
        "label": "Want to use product featured image?",
        "info": "Choose whether you want to use product image or upload a second one?"
      },
      {
        "type": "text",
        "id": "button_1",
        "default": "Button label",
        "label": "Choose Button #1 label"
      },
      {
        "type": "url",
        "id": "button_link1",
        "label": "Where does it lead you?"
      },
      {
        "type": "text",
        "id": "button_2",
        "default": "Button label",
        "label": "Choose Button #1 label"
      },
      {
        "type": "url",
        "id": "button_link2",
        "label": "Where does it lead you?"
      }
    ]
  }
  ],
  "presets": [
    {
      "name": "Featured full-screen Slider",
      "blocks": [
        {
            "type": "image"
        },
        {
            "type": "image"
        },
        {
            "type": "featured-product"
        }
      ]
    }
  ]
}
{% endschema %}
